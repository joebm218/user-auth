<!DOCTYPE html>
<html>

<head>
  <title>Packages</title>
  {{> link}}
  <link rel="stylesheet" type="text/css" href="/css/package_style.css">

  <script>
    function w3_open() {
      document.getElementById("mySidebar").style.display = "block";
    }

    function w3_close() {
      document.getElementById("mySidebar").style.display = "none";
    }
  </script>
</head>

<body style="  background-color: #cccccc;">

  {{> profile_header}}


  {{!-- start --}}
  <form method="POST" action="/search-results">

    <div class="container w3-white " style="width: 1150px;margin-top: 1%;">
      <div class="w3-row">
        <div class="w3-container w3-col" style="width:20%;padding-top: 1%;">
          <label><i class="fa fa-plane"></i>&nbsp;Departure</label>
          <select class="w3-input w3-border w3-round-large" name="departure" searchable="Search here.." required>
            <option value="" disabled selected>Departing From</option>
            <option value="">Select Country</option>
            <option value="KOCHI">Kochi</option>
            <option value="DUBAI">Dubai</option>
          </select>
          {{!-- <input class="w3-input w3-border" type="text" placeholder="Departing from"> --}}
        </div>
        <div class="w3-container w3-col" style="width:20%;padding-top: 1%;">
          <label><i class="fa fa-fighter-jet"></i>&nbsp;Arrival</label>
          <select class="w3-input w3-border w3-round-large" name="arrival" searchable="Search here.." required>
            <option value="" disabled selected>Arriving at</option>
            <option value="">Select Country</option>
            <option value="KOCHI">Kochi</option>
            <option value="DUBAI">Dubai</option>
          </select>
        </div>
        <div class="w3-container w3-col" style="width:20%;padding-top: 1%;">
          <label><i class="glyphicon glyphicon-calendar fa fa-calendar"></i>&nbsp;Date Range</label>
          <div class="input-group">
            <input class="w3-input w3-border w3-round-large" name="date" type="date" placeholder="Date Range" required>
          </div>
        </div>
        <div class="w3-container w3-col" style="width:20%;padding-top: 1%;">
          <label><i class="glyphicon glyphicon-calendar fa fa-calendar"></i>&nbsp;Date Range(To)</label>
          <div class="input-group">
            <input class="w3-input w3-border w3-round-large" name="date_to" type="date" placeholder="Date Range"
              required>
          </div>
        </div>
        <div class="w3-container w3-col" style="width:20%;padding-top: 3.2%;">
          <p><button type="submit" class="w3-button w3-black w3-round-large" style="width: 100%;">Search
              Flights</button></p>
        </div>

      </div>
    </div>
  </form>

  <div class="container">
    <div class="w3-row w3-border" style="width: 100%;background-size: cover;">
      <h2 class="font-mont">Featured Packages.</h2>
    </div>
  </div>

  {{!-- results --}}

  <div class="container  " style="width: 1150px;margin-top: 1%;padding: 1%;">
    <div class="w3-row" style="padding: 1%">
      {{#each list1}}
      <div class="col-sm-2"
        style="margin-top:1%;background:white;padding:2%;margin-left:2%;box-shadow: 1px 5px 7px 1px #999999;">
        <center>
          <div class="img-rounded"
            style="width:100px;height:100px;background-image: url('/images/{{this.imga}}');background-size: cover;border-radius:50%;">
          </div>
          <h5 class="font-arial"><a href="http://localhost:3000/view_detail_page?country_id={{this.country_name}}"
              style="color:black"><b>{{this.country_name}}</b></a></h5>
          <p>{{this.content}}</p>
          <span class="font-arial">
            <font size="5"><b>{{this.rate}}$</b></font>
          </span>
        </center>
      </div>

      {{/each}}
    </div>
  </div>



</body>

</html>